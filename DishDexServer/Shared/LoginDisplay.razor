@inject NavigationManager nav
<AuthorizeView>
    <Authorized>
        <MudForm method="post" action="Identity/Account/LogOut">
            <MudButton ButtonType="ButtonType.Submit" EndIcon="@Icons.Material.Filled.Logout" Color="Color.Inherit" Variant="Variant.Filled" IconColor="Color.Warning">Logout</MudButton>
        </MudForm>
        <MudButton EndIcon="@Icons.Material.Filled.Person" Color="Color.Inherit" Href="Identity/Account/Manage" Variant="Variant.Filled" IconColor="Color.Warning">Account</MudButton>
        @* <MudButton EndIcon="@Icons.Material.Filled.Person" Color="Color.Inherit" OnClick="@(() => AccDrawerToggle())" Variant="Variant.Filled" IconColor="Color.Warning">Account</MudButton> *@
        <MudButton EndIcon="@Icons.Material.Filled.Star" Color="Color.Inherit" OnClick="@(() => nav.NavigateTo("Favorite"))" Variant="Variant.Filled" IconColor="Color.Warning">Favorites</MudButton>
        <MudDrawer Variant="DrawerVariant.Temporary" Anchor="Anchor.End" @bind-Open="_accrawerOpen" Elevation="1">
            <MudDrawerHeader>
                <MudText Typo="Typo.h6">Username</MudText>
            </MudDrawerHeader>
            <AccMenu />
        </MudDrawer>
    </Authorized>
    <NotAuthorized>
        <MudButton EndIcon="@Icons.Material.Filled.Edit" Color="Color.Inherit" Href="Identity/Account/Register" Variant="Variant.Filled" IconColor="Color.Warning">Register</MudButton>
        <MudButton EndIcon="@Icons.Material.Filled.Login" Color="Color.Inherit" Href="Identity/Account/Login" Variant="Variant.Filled" IconColor="Color.Warning">Login</MudButton>
    </NotAuthorized>
</AuthorizeView>
@code{
    bool _accrawerOpen = false;

    void AccDrawerToggle()
    {
        _accrawerOpen = !_accrawerOpen;
    }
}